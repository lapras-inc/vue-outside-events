{
  "name": "vue-outside-events",
  "version": "1.1.3",
  "description": "Vue 3.x directive to help a specified element listen for specific events occurring outside of itself.",
  "main": "dist/vue-outside-events.min.js",
  "scripts": {
    "test": "echo 'currently there are no tests.'",
    "cover": "opn coverage/lcov-report/index.html",
    "build": "rollup -c",
    "lint": "standard \"src/*.js\"",
    "lint:fix": "standard \"src/*.js\" --fix",
    "release": "np --no-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lapras-inc/vue-outside-events.git"
  },
  "author": "Nicholas Hutchind <nicholas@hutchind.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lapras-inc/vue-outside-events/issues"
  },
  "homepage": "https://github.com/lapras-inc/vue-outside-events#readme",
  "devDependencies": {
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "jest": "^22.4.2",
    "np": "^2.20.1",
    "opn-cli": "^3.1.0",
    "rollup": "^0.56.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-license": "^0.5.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "standard": "^11.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "roots": [
      "test/"
    ]
  },
  "engines": {
    "node": ">=6"
  }
}
